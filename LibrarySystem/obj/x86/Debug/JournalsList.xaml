<Page
    x:Class="LibrarySystem.JournalsList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LibrarySystem"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FFC5C5C5">
        <Canvas x:ConnectionId='2' x:Name="layoutRoot1">

            <StackPanel x:ConnectionId='6' x:Name="Panel" Margin="0,0,0,800" Background="#FF587ACC"/>
            <TextBox x:ConnectionId='7' x:Name="JournalTitleTxt" HorizontalAlignment="Left" Height="53" Margin="215,300,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166" BorderBrush="#66000000"/>
            <TextBlock HorizontalAlignment="Left" Margin="63,310,0,0" TextWrapping="Wrap" Text="Title" VerticalAlignment="Top" Height="47" Width="107" TextAlignment="Left" FontSize="15" FontWeight="Bold"/>
            <TextBlock HorizontalAlignment="Left" Margin="63,380,0,0" TextWrapping="Wrap" Text="Publish Date" VerticalAlignment="Top" Height="46" Width="118" TextAlignment="Left" FontSize="15" FontWeight="Bold"/>
            <Button x:ConnectionId='8' x:Name="btnAddJournal" Content="Add Journal" RenderTransformOrigin="2.12,1.344" Width="120" FontWeight="Bold" Canvas.Left="25" Canvas.Top="870"                             HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:ConnectionId='9' x:Name="btnGoBackJournalsList" Content="Home" Height="52" Width="88" Canvas.Left="25" Canvas.Top="162" VerticalAlignment="Top"                                    />
            <TextBlock Height="95" TextWrapping="Wrap" Text="Library Management System Journals List" Width="548" TextAlignment="Center" FontSize="35" FontWeight="Bold" HorizontalAlignment="Left" Canvas.Left="485" Canvas.Top="10" VerticalAlignment="Top"/>
            <TextBlock TextWrapping="Wrap" Text="Editor" Height="46" Width="118" TextAlignment="Left" FontSize="15" FontWeight="Bold" Canvas.Left="63" Canvas.Top="450"/>
            <TextBox x:ConnectionId='10' x:Name="EditorTxt" Height="53" TextWrapping="Wrap" Text="" Width="166" BorderBrush="#66000000" Canvas.Left="215" Canvas.Top="440" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBlock TextWrapping="Wrap" Text="Frequency" Height="46" Width="118" TextAlignment="Left" FontSize="15" FontWeight="Bold" Canvas.Left="63" Canvas.Top="660" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBlock TextWrapping="Wrap" Text="Genre" Height="46" Width="118" TextAlignment="Left" FontSize="15" FontWeight="Bold" Canvas.Left="63" Canvas.Top="520" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:ConnectionId='11' x:Name="GenreTxt" Height="53" TextWrapping="Wrap" Text="" Width="166" BorderBrush="#66000000" Canvas.Left="215" Canvas.Top="510" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:ConnectionId='12' x:Name="btnUpdateJournal" Content="Update Journal" RenderTransformOrigin="2.12,1.344" Width="120" FontWeight="Bold" Canvas.Left="175" Canvas.Top="870"                                HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:ConnectionId='13' x:Name="btnDeleteJournal" Content="Delete Journal" RenderTransformOrigin="2.12,1.344" Width="120" FontWeight="Bold" Canvas.Left="325" Canvas.Top="870"                               />
            <ComboBox x:ConnectionId='14' x:Name="comboSort" Width="166" Background="#66F50000" PlaceholderText="Sort By" FontWeight="Bold" Canvas.Left="215" Canvas.Top="162"                                               Height="52" VerticalAlignment="Center">
                <ComboBoxItem Content="Title A-Z"/>
                <ComboBoxItem Content="Title Z-A"/>
                <ComboBoxItem Content="Publish Date - Newest First"/>
                <ComboBoxItem Content="Publish Date - Oldest First"/>
                <ComboBoxItem Content="Actual Price - Cheapest"/>
                <ComboBoxItem Content="Actual Price - Most Expensive"/>
                <ComboBoxItem Content="The Most Frequent"/>
                <ComboBoxItem Content="The Least Frequent"/>
            </ComboBox>
            <CalendarDatePicker x:ConnectionId='15' x:Name="CalendarDtPck" Canvas.Left="215" Canvas.Top="370" Width="166" Height="53" VerticalAlignment="Top"/>
            <TextBlock Height="25" Canvas.Left="175" TextWrapping="Wrap" Text="Enter Journal ID to Update/Delete it" Canvas.Top="912" Width="268" FontWeight="Bold" TextAlignment="Center" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:ConnectionId='16' x:Name="txtBoxID" Height="33" Canvas.Left="175" TextWrapping="Wrap" Text="" Canvas.Top="946" Width="268" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <ComboBox x:ConnectionId='17' x:Name="comboFrequency" Canvas.Left="215" Canvas.Top="650" Width="166" Height="53" HorizontalAlignment="Center">
                <ComboBoxItem Content="Daily"/>
                <ComboBoxItem Content="Weekly"/>
                <ComboBoxItem Content="BiWeekly"/>
                <ComboBoxItem Content="Monthly"/>
                <ComboBoxItem Content="BiMonthly"/>
                <ComboBoxItem Content="Quarterly"/>
                <ComboBoxItem Content="SemiAnnually"/>
                <ComboBoxItem Content="Annually"/>
                <ComboBoxItem Content="BiAnnually"/>
            </ComboBox>
            <TextBlock TextWrapping="Wrap" Text="Price" Height="46" Width="118" TextAlignment="Left" FontSize="15" FontWeight="Bold" Canvas.Left="63" Canvas.Top="730" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:ConnectionId='18' x:Name="PriceTxt" Height="53" TextWrapping="Wrap" Text="" Width="166" BorderBrush="#66000000" Canvas.Left="215" Canvas.Top="720" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBlock TextWrapping="Wrap" Text="Journal Edition" Height="46" Width="118" TextAlignment="Left" FontSize="15" FontWeight="Bold" Canvas.Left="63" Canvas.Top="590" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:ConnectionId='19' x:Name="JournalEditionTxt" Height="53" TextWrapping="Wrap" Text="" Width="166" BorderBrush="#66000000" Canvas.Left="215" Canvas.Top="580" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBlock Height="25" Canvas.Left="485" TextWrapping="Wrap" Text="The ID of the Selected Journal for Easy Copying" Canvas.Top="919" Width="340" FontWeight="Bold" TextAlignment="Center" FontSize="15" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:ConnectionId='20' x:Name="SelectedJournalIdTxt" Height="33" Canvas.Left="485" TextWrapping="Wrap" Text="" Canvas.Top="950" Width="350" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Height="43" Canvas.Left="996" TextWrapping="Wrap" Text="Enter the ID of the journal you want to create discount for" Canvas.Top="858" Width="268" FontWeight="Bold" TextAlignment="Center" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:ConnectionId='21' x:Name="txtBoxIDDis" Height="33" Canvas.Left="996" TextWrapping="Wrap" Text="" Canvas.Top="907" Width="268" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:ConnectionId='22' x:Name="txtDisLevel" Height="33" Canvas.Left="1335" TextWrapping="Wrap" Text="" Canvas.Top="907" Width="74" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Height="43" Canvas.Left="1308" TextWrapping="Wrap" Text="Enter the discount level (0-99)" Canvas.Top="858" Width="139" FontWeight="Bold" TextAlignment="Center" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:ConnectionId='23' x:Name="btnCreateDis" Content="Create Discount" RenderTransformOrigin="2.12,1.344" Width="129" FontWeight="Bold" Canvas.Left="996" Canvas.Top="950" HorizontalAlignment="Center"                           />
            <StackPanel Height="631" Canvas.Left="1286" Canvas.Top="142" Width="176" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Margin="8,8,8,4" Style="{ThemeResource BaseTextBlockStyle}"><Run Text="Filter by..."/></TextBlock>
                <TextBox x:ConnectionId='25' x:Name="FilterByTitle" Width="150" Header="Title" Margin="8"
                    HorizontalAlignment="Left"                              />
                <TextBox x:ConnectionId='26' x:Name="FilterByEditor" Width="150" Header="Editor" Margin="8"
                    HorizontalAlignment="Left"                              />
                <TextBox x:ConnectionId='27' x:Name="FilterByGenre" Width="150" Header="Genre" Margin="8"
                    HorizontalAlignment="Left"                              />
                <TextBox x:ConnectionId='28' x:Name="FilterByEdition" Width="150" Header="Edition" Margin="8"
                    HorizontalAlignment="Left"                              />
                <TextBox x:ConnectionId='29' x:Name="FilterByFrequency" Width="150" Header="Frequency" Margin="8"
                    HorizontalAlignment="Left"                              />
                <TextBox x:ConnectionId='30' x:Name="FilterByPrice" Width="150" Header="Price" Margin="8"
	                HorizontalAlignment="Left"                              />
                <TextBox x:ConnectionId='31' x:Name="FilterByActualPrice" Width="150" Header="Actual Price" Margin="8"
	                HorizontalAlignment="Left"                              />
                <TextBox x:ConnectionId='32' x:Name="FilterByDiscountLevel" Width="150" Header="Discount Level" Margin="8"
	                HorizontalAlignment="Left"                              />
            </StackPanel>
            <Button x:ConnectionId='24' x:Name="btnExport" Content="Export" RenderTransformOrigin="2.12,1.344" Width="150" FontWeight="Bold" Canvas.Left="1061" Canvas.Top="82" VerticalAlignment="Top"                        />
        </Canvas>
        <StackPanel x:ConnectionId='3' 
        x:Name="stack_panel2" 
        Orientation="Vertical"
        Background="Cornsilk"
        Padding="50"
        HorizontalAlignment="Center" VerticalAlignment="Top" Height="704" Width="534" Margin="483,142,483,154">
        </StackPanel>
        <ListView x:ConnectionId='4'
            x:Name="ListView2" 
            Header=" Choose a journal to see the full details"
                                                         
            ScrollViewer.HorizontalScrollMode="Enabled" Margin="483,142,483,154" Width="534" Height="704">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Padding="1">
                        <TextBlock
                            Text="{Binding Title}"
                            FontWeight="Black"
                            />
                        <TextBlock
                            Text="{Binding Editor}"
                            FontStyle="Italic"
                            />
                        <TextBlock
                            Text="{Binding Genre}"
                            FontWeight="Black"
                            Foreground="SpringGreen"
                            />
                        <TextBlock
                            Text="{Binding ActualPrice}"
                            FontWeight="Black"
                            Foreground="Crimson"
                            />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

